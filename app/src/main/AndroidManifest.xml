<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jon.pokertimer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokerTimer">
        <activity
            android:name="com.jon.pokertimer.activities.CountTokenActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.InGameActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.PrepareGameActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.ChangeTokenActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.SetupLevelActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.SetupOptionActivity"
            android:exported="false" />
        <activity
            android:name="com.jon.pokertimer.activities.SetupTokenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>